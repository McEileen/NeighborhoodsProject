<div class="container-fluid">
  <div class="row" id="masterRow">

    <!--first half of screen-->
    <div class="col-sm-6" id="firstHalf">
      <div class="neighborhoods_list">
        <h3> Oops, that search term didn't return any neighborhoods.  Here is a list of all the neighborhoods. </h3>
        <ul>
          <% @neighborhoods.each do |neighborhood| %>
            <li class="neighborhood"> <%= neighborhood.name %> </li>
          <% end %>
        </ul>
      </div>


    </div>



  </div> <!--end of masterRow-->
</div> <!--end of container-->